{{> layout/header}}
<style>
    .custom-bold{
        padding-right: 3px;
        max-width: calc(100% - 180px);
        font-size: 18px;
        font-weight: bold;
        text-overflow: ellipsis;
        white-space: nowrap;
    }
    .custom-gray {
        color: #949494;
        font-size : 12px;
    }
    .recruit-link {
      color: #000; /* 기본 링크 색상 */
      text-decoration: none; /* 밑줄 제거 (원하면 유지 가능) */
    }

    .recruit-link:hover {
      color: #2d67ff; /* hover 시 파란색 */
      text-decoration: underline; /* hover 시 밑줄 (선택사항) */
    }

    .recruit-link:visited {
      color: #949494; /* 방문한 링크 */
    }
</style>
<div class="container p-5">

    {{#recruitList}}
        <div class="card mb-3">
            <div class="card-body d-flex">
                <div class="w-75">
                    <!-- 공고 타이틀 및 구인 날짜 -->
                    <div class="d-flex d-flex align-items-center">
                        <a href="/recruit/{recruitIdx}" class="recruit-link"><span class="fw-bold custom-bold">{{recruitTitle}}</span></a>
                        <span class="custom-gray">~ {{endAt}} (월)</span>
                    </div>
                    <!-- 공고 타이틀 및 구인 날짜 -->
                    <div class="mb-2 custom-gray">
                        <span>{{area}} *</span>
                        <span>{{career}} *</span>
                        <span>{{education}} *</span>
                        <span>{{workType}}</span>
                    </div>
                    <div>
                        <span class="custom-bold">{{recruitContent}}</span>
                    </div>
                </div>
                <div class="d-flex align-items-center w-25 custom-bold">
                    <span class="fw-bold">{{corp.corpName}}</span>
                </div>
            </div>
        </div>
    {{/recruitList}}

    <ul class="pagination d-flex justify-content-center">
        <li class="page-item disabled"><a class="page-link" href="#">Previous</a></li>
        <li class="page-item"><a class="page-link" href="#">Next</a></li>
    </ul>

</div>

{{> layout/footer}}