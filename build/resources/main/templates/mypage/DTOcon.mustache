package com.mypage.controller;

import com.mypage.domain.MenuItem;
import com.mypage.domain.MyPageData;

import org.springframework.stereotype.Controller;
import org.springframework.ui.Model;
import org.springframework.web.bind.annotation.GetMapping;

import java.security.Principal;
import java.util.ArrayList;
import java.util.List;

@Controller
public class MyPageController {

@GetMapping("/mypage")
public String myPage(Model model, Principal principal) {
boolean isLoggedIn = (principal != null);
String username = isLoggedIn ? principal.getName() : "게스트";

    List menuList = new ArrayList<>();
    menuList.add(new MenuItem("이력서 등록", "/resume/"));
    menuList.add(new MenuItem("이력서 열람", "/resume/"));
    menuList.add(new MenuItem("이력서 관리", "/resume/"));
    menuList.add(new MenuItem("나의 지원 현황", "/my/"));
    menuList.add(new MenuItem("내가 작성한 게시판 관리", "/my/"));
    menuList.add(new MenuItem("관심 기업 및 비슷한 기업정보", "/my/"));

    MyPageData myPageData = new MyPageData(isLoggedIn, username, menuList);
    model.addAttribute("myPage", myPageData);

    return "mypage";
    }
}
