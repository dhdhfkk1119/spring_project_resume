{{> layout/header}}

<body class="bg-light">
<div class="container py-5" style="max-width: 900px;">

    <!-- 제목 -->
    <div class="mb-3">
        <h2 class="fw-bold text-primary">{{board.boardTitle}}</h2>
        <div class="text-muted small">
            ✍️ <strong>{{board.member.username}}</strong>
            &nbsp;|&nbsp; 📅 {{formattedCreatedAt}}
            &nbsp;|&nbsp; 👁️ {{board.boardHits}}회 조회
        </div>
    </div>

    <!-- 좋아요 -->
    <div class="mb-4">
        {{#sessionUser}}
            <form method="post" action="/board/{{board.boardIdx}}/like" style="display:inline;">
                <button type="submit"
                        class="btn btn-sm {{#isLiked}}btn-danger{{/isLiked}}{{^isLiked}}btn-outline-danger{{/isLiked}}">
                    ❤️ 좋아요 <span class="badge bg-light text-dark">{{likeCount}}</span>
                </button>
            </form>
        {{/sessionUser}}
        {{^sessionUser}}
            <span class="text-muted">❤️ 좋아요 <span class="badge bg-light text-dark">{{likeCount}}</span></span>
            <small class="ms-2"><a href="/login-form">로그인</a> 후 이용 가능합니다.</small>
        {{/sessionUser}}
    </div>

    <!-- 본문 -->
    <div class="p-4 bg-white border rounded shadow-sm mb-4">
        <p class="mb-3">{{board.boardContent}}</p>
        {{#board.tags}}
            <span class="badge bg-secondary me-1">#{{.}}</span>
        {{/board.tags}}
    </div>

    <!-- 수정/삭제 -->
    {{#isAuthor}}
        <div class="mb-4 d-flex gap-2">
            <a href="/board/{{board.boardIdx}}/edit" class="btn btn-outline-primary">수정</a>
            <form method="post" action="/board/{{board.boardIdx}}/delete"
                  onsubmit="return confirm('정말 삭제하시겠습니까?');">
                <button type="submit" class="btn btn-outline-danger">삭제</button>
            </form>
        </div>
    {{/isAuthor}}

    <!-- 댓글 헤더 -->
    <hr>
    <h5 class="mt-4 mb-3">💬 댓글</h5>

    <!-- 댓글 목록 -->
    {{#comments}}
        <div class="bg-white border rounded shadow-sm p-3 mb-3">
            <div class="d-flex justify-content-between align-items-center">
                <div>
                    <strong>{{username}}</strong>
                    <span class="text-muted small">· {{createdAt}}</span>
                </div>
                {{#isOwner}}
                    <div class="d-flex gap-1">
                        <button onclick="toggleEditForm({{id}})" class="btn btn-sm btn-outline-warning">수정</button>
                        <form method="post" action="/comments/{{id}}/delete"
                              onsubmit="return confirm('댓글을 삭제하시겠습니까?');">
                            <button type="submit" class="btn btn-sm btn-outline-danger">삭제</button>
                        </form>
                    </div>
                {{/isOwner}}
            </div>

            <!-- 댓글 본문 -->
            <p id="comment-text-{{id}}" class="mt-2">{{comment}}</p>

            <!-- 수정 폼 -->
            <form id="edit-form-{{id}}" method="post" action="/comments/{{id}}/edit"
                  style="display:none;" class="mt-2">
                <textarea name="content" class="form-control mb-2" rows="3">{{comment}}</textarea>
                <button type="submit" class="btn btn-sm btn-success me-2">수정 완료</button>
                <button type="button" class="btn btn-sm btn-secondary" onclick="toggleEditForm({{id}})">취소</button>
            </form>

            <!-- 답글 -->
            <button class="btn btn-sm btn-link text-primary mt-2" onclick="toggleReplyForm({{id}})">↪ 답글 달기</button>

            <!-- 답글 입력 -->
            <div id="reply-form-{{id}}" style="display:none;" class="mt-2">
                <form method="post" action="/board/{{board.boardIdx}}/comment">
                    <input type="hidden" name="parentId" value="{{id}}">
                    <textarea name="content" class="form-control mb-2" rows="2" placeholder="답글을 입력하세요..."></textarea>
                    <button type="submit" class="btn btn-sm btn-primary">답글 작성</button>
                </form>
            </div>

            <!-- 대댓글 목록 -->
            {{#replies}}
                <div class="mt-3 ps-4 border-start">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <strong>{{username}}</strong>
                            <span class="text-muted small">· {{createdAt}}</span>
                        </div>
                        {{#isOwner}}
                            <form method="post" action="/comments/{{id}}/delete"
                                  onsubmit="return confirm('답글을 삭제하시겠습니까?');">
                                <button type="submit" class="btn btn-sm btn-outline-danger">삭제</button>
                            </form>
                        {{/isOwner}}
                    </div>
                    <p class="mt-1 mb-0">{{comment}}</p>
                </div>
            {{/replies}}

        </div>
    {{/comments}}

    {{^comments}}
        <div class="text-muted mb-4">아직 댓글이 없습니다.</div>
    {{/comments}}

    <!-- 댓글 작성 -->
    <hr>
    {{#sessionUser}}
        <form method="post" action="/board/{{board.boardIdx}}/comment" class="mt-3">
            <div class="mb-3">
                <textarea name="content" class="form-control" rows="3" placeholder="댓글을 입력하세요..." required></textarea>
            </div>
            <button type="submit" class="btn btn-primary">댓글 작성</button>
        </form>
    {{/sessionUser}}

    {{^sessionUser}}
        <div class="text-muted mt-3">
            ✍️ 댓글을 작성하려면 <a href="/login-form">로그인</a>이 필요합니다.
        </div>
    {{/sessionUser}}

    <!-- 목록으로 -->
    <div class="mt-5">
        <a href="/board/list" class="btn btn-secondary">← 목록으로</a>
    </div>

</div>

<!-- 토글 스크립트 -->
<script>
    function toggleReplyForm(id) {
        const form = document.getElementById(`reply-form-${id}`);
        form.style.display = form.style.display === 'none' ? 'block' : 'none';
    }

    function toggleEditForm(id) {
        const text = document.getElementById(`comment-text-${id}`);
        const form = document.getElementById(`edit-form-${id}`);
        if (form.style.display === 'none') {
            form.style.display = 'block';
            text.style.display = 'none';
        } else {
            form.style.display = 'none';
            text.style.display = 'block';
        }
    }
</script>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
</body>

