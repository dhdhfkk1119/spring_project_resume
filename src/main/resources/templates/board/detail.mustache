{{> layout/header}}

<body class="bg-light">
<div class="container mt-5">

    <!-- 게시글 제목 -->
    <h2 class="text-primary mb-3">{{board.boardTitle}}</h2>

    <!-- 게시글 정보 -->
    <div class="mb-3 text-muted">
        ✏️ {{board.member.username}} | 📅 {{formattedCreatedAt}} | 👁️ {{board.boardHits}}회 조회
    </div>

    <!-- 좋아요 영역 -->
    <div class="mb-4">
        {{#sessionUser}}
            <form method="post" action="/board/{{board.boardIdx}}/like" style="display: inline;">
                <button type="submit"
                        class="btn btn-sm {{#isLiked}}btn-danger{{/isLiked}}{{^isLiked}}btn-outline-danger{{/isLiked}}">
                    ❤️ 좋아요 ({{likeCount}})
                </button>
            </form>
        {{/sessionUser}}
        {{^sessionUser}}
            <span class="text-muted">❤️ 좋아요 ({{likeCount}})</span>
            <small class="ms-2"><a href="/login-form">로그인</a> 후 좋아요를 누를 수 있어요.</small>
        {{/sessionUser}}
    </div>

    <!-- 게시글 본문 -->
    <div class="mb-4 border rounded p-3 bg-white">
        <p>{{board.boardContent}}</p>
        {{#board.tags}}
            <span class="badge bg-secondary">#{{.}}</span>
        {{/board.tags}}
    </div>

    <!-- 게시글 수정/삭제 버튼 -->
    {{#isAuthor}}
        <div class="mb-4">
            <a href="/board/{{board.boardIdx}}/edit" class="btn btn-outline-primary">수정</a>
            <form method="post" action="/board/{{board.boardIdx}}/delete"
                  onsubmit="return confirm('정말 삭제하시겠습니까?');"
                  style="display:inline;">
                <button type="submit" class="btn btn-outline-danger">삭제</button>
            </form>
        </div>
    {{/isAuthor}}

    <hr>

    <!-- 댓글 목록 -->
    <h5>💬 댓글</h5>
    {{#comments}}
        <div class="border rounded p-3 mb-3 bg-white">
            <strong>{{username}}</strong> • {{createdAt}}<br>

            <!-- 댓글 텍스트 -->
            <p id="comment-text-{{id}}" class="mt-2">{{comment}}</p>

            <!-- 댓글 수정 폼 (숨김) -->
            <form id="edit-form-{{id}}" method="post" action="/comments/{{id}}/edit" style="display:none;" class="mt-2">
                <textarea name="content" class="form-control mb-2" rows="3">{{comment}}</textarea>
                <button type="submit" class="btn btn-sm btn-success">수정 완료</button>
                <button type="button" class="btn btn-sm btn-secondary" onclick="toggleEditForm({{id}})">취소</button>
            </form>

            {{#isOwner}}
                <!-- 수정 버튼 -->
                <button onclick="toggleEditForm({{id}})" class="btn btn-sm btn-outline-warning">수정</button>

                <!-- 삭제 버튼 -->
                <form method="post" action="/comments/{{id}}/delete"
                      style="display:inline;" onsubmit="return confirm('댓글을 삭제하시겠습니까?');">
                    <button type="submit" class="btn btn-sm btn-outline-danger">삭제</button>
                </form>
            {{/isOwner}}

            <!-- 답글 버튼 -->
            <button class="btn btn-sm btn-link text-primary" onclick="toggleReplyForm({{id}})">답글 달기</button>

            <!-- 대댓글 입력 폼 -->
            <div id="reply-form-{{id}}" style="display:none;" class="mt-2">
                <form method="post" action="/board/{{board.boardIdx}}/comment">
                    <input type="hidden" name="parentId" value="{{id}}">
                    <textarea name="content" class="form-control mb-2" rows="2" placeholder="답글을 입력하세요"></textarea>
                    <button type="submit" class="btn btn-sm btn-primary">답글 작성</button>
                </form>
            </div>

            <!-- 대댓글 -->
            {{#replies}}
                <div class="border-start ps-3 mt-3 ms-3">
                    <strong>{{username}}</strong> • {{createdAt}}<br>
                    <p class="mt-1">{{comment}}</p>
                    {{#isOwner}}
                        <form method="post" action="/comments/{{id}}/delete"
                              style="display:inline;" onsubmit="return confirm('댓글을 삭제하시겠습니까?');">
                            <button type="submit" class="btn btn-sm btn-outline-danger">삭제</button>
                        </form>
                    {{/isOwner}}
                </div>
            {{/replies}}
        </div>
    {{/comments}}

    {{^comments}}
        <p class="text-muted">댓글이 아직 없습니다.</p>
    {{/comments}}

    <hr>

    <!-- 댓글 작성 폼 -->
    {{#sessionUser}}
        <form method="post" action="/board/{{board.boardIdx}}/comment">
            <div class="mb-3">
                <textarea name="content" class="form-control" rows="3" placeholder="댓글을 입력하세요"></textarea>
            </div>
            <button type="submit" class="btn btn-primary">댓글 작성</button>
        </form>
    {{/sessionUser}}

    {{^sessionUser}}
        <p class="text-muted">✋ 댓글을 작성하려면 <a href="/login-form">로그인</a>해주세요.</p>
    {{/sessionUser}}

    <a href="/board/list" class="btn btn-secondary mt-4">← 목록으로</a>
</div>

<!-- 댓글 및 답글 폼 토글 스크립트 -->
<script>
    function toggleReplyForm(commentId) {
        const form = document.getElementById(`reply-form-${commentId}`);
        form.style.display = form.style.display === 'none' ? 'block' : 'none';
    }

    function toggleEditForm(commentId) {
        const text = document.getElementById(`comment-text-${commentId}`);
        const form = document.getElementById(`edit-form-${commentId}`);
        if (form.style.display === 'none') {
            form.style.display = 'block';
            text.style.display = 'none';
        } else {
            form.style.display = 'none';
            text.style.display = 'block';
        }
    }
</script>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>

