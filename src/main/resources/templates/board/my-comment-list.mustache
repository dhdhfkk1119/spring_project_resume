{{> layout/header}}

<body style="background:#fdfdfd; font-family: 'SUIT', sans-serif;">

<div class="wrapper">
    <div class="content">
        <div class="container py-5" style="max-width: 950px;">

            <!-- 제목 -->
            <div class="mb-4">
                <h2 class="fw-bold text-primary mb-4" style="font-size: 1.8rem;">
                    <i class="bi bi-chat-dots me-2"></i> 내가 댓글 단 게시글
                </h2>
            </div>

            <!-- 게시글 카드 리스트 -->
            <div class="row g-4">
                {{#boardList}}
                    <div class="col-12">
                        <div class="card shadow-sm rounded-4 border-0 p-4 transition" style="background:#fff;">
                            <div class="d-flex flex-column flex-md-row justify-content-between align-items-start align-items-md-center gap-3">

                                <div class="flex-grow-1">
                                    <a href="/board/{{boardIdx}}" class="text-decoration-none fw-semibold fs-5 text-dark">
                                        <i class="bi bi-journal-text me-2 text-primary"></i>{{boardTitle}}
                                    </a>
                                    <p class="text-muted small mt-1 mb-2">
                                        <i class="bi bi-person-fill me-1 text-primary"></i>{{#member}}{{username}}{{/member}}{{^member}}{{username}}{{/member}} &nbsp;·&nbsp;
                                        <i class="bi bi-calendar-heart me-1 text-primary"></i>{{formattedCreatedAt}} &nbsp;·&nbsp;
                                        <i class="bi bi-eye-fill me-1 text-primary"></i>조회수 {{boardHits}}
                                    </p>
                                    <p class="mb-0">
                                    <span class="badge bg-primary-subtle text-primary me-3 px-3 py-1 rounded-pill fw-semibold">
                                        <i class="bi bi-heart-fill me-2"></i> 좋아요 {{likeCount}}개
                                    </span>
                                        <span class="badge bg-info-subtle text-info px-3 py-1 rounded-pill fw-semibold">
                                        <i class="bi bi-chat-dots me-2"></i> 댓글 {{commentCount}}개
                                    </span>
                                    </p>
                                </div>

                                {{#isAuthor}}
                                    <div class="d-flex gap-2 flex-shrink-0">
                                        <a href="/board/{{boardIdx}}/edit"
                                           class="btn btn-sm rounded-pill px-3 py-1 fw-semibold"
                                           style="border: 2px solid #2d67ff; color: #2d67ff;">
                                            <i class="bi bi-pencil-square me-2"></i>수정
                                        </a>
                                        <form method="post" action="/board/{{boardIdx}}/delete"
                                              onsubmit="return confirm('정말 삭제하시겠습니까?');"
                                              class="m-0">
                                            <button type="submit"
                                                    class="btn btn-sm rounded-pill px-3 py-1 fw-semibold"
                                                    style="border: 2px solid #000; color: #000;">
                                                <i class="bi bi-trash3 me-2"></i>삭제
                                            </button>
                                        </form>
                                    </div>
                                {{/isAuthor}}

                            </div>
                        </div>
                    </div>
                {{/boardList}}

                {{^boardList}}
                    <div class="col-12">
                        <div class="alert alert-light border text-center text-muted py-5">
                            <i class="bi bi-emoji-frown fs-5"></i><br>
                            댓글을 단 게시글이 없습니다.
                        </div>
                    </div>
                {{/boardList}}
            </div>

        </div>
    </div>
</div>

<!-- 애니메이션 스타일 -->
<style>
    .transition {
        transition: transform 0.3s ease, box-shadow 0.3s ease;
    }
    .card:hover {
        transform: translateY(-6px);
        box-shadow: 0 16px 30px rgba(0, 0, 0, 0.12);
    }
</style>

<!-- 폰트 & 아이콘 -->
<link href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css" rel="stylesheet" />
<link href="https://cdn.jsdelivr.net/npm/suit-font@1.0.0/build/web/suit.css" rel="stylesheet" />
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>

</body>

{{> layout/footer}}
