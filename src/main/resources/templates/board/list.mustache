{{> layout/header}}

<body class="bg-light">
<div class="container py-5" style="max-width: 950px;">

    <!-- 제목 -->
    <div class="text-center mb-5">
        <h1 class="fw-bold text-primary display-6">📘 커뮤니티</h1>
    </div>

    <!-- 검색 및 정렬 -->
    <div class="card shadow-sm border-0 mb-4">
        <div class="card-body d-flex justify-content-between flex-wrap gap-3">
            <form method="get" class="row row-cols-1 row-cols-md-auto g-3 align-items-end flex-grow-1">
                <div class="col">
                    <label for="keyword" class="form-label">🔍 검색</label>
                    <input type="text" name="keyword" id="keyword" class="form-control"
                           placeholder="제목 또는 내용" value="{{keyword}}">
                </div>
                <div class="col">
                    <label for="sort" class="form-label">📌 정렬</label>
                    <select name="sort" id="sort" class="form-select">
                        <option value="createdAt" {{#isSortCreatedAt}}selected{{/isSortCreatedAt}}>최신순</option>
                        <option value="boardHits" {{#isSortBoardHits}}selected{{/isSortBoardHits}}>조회순</option>
                    </select>
                </div>
                <div class="col">
                    <label for="direction" class="form-label">⬇⬆ 방향</label>
                    <select name="direction" id="direction" class="form-select">
                        <option value="desc" {{#isDesc}}selected{{/isDesc}}>내림차순</option>
                        <option value="asc" {{#isAsc}}selected{{/isAsc}}>오름차순</option>
                    </select>
                </div>
                <div class="col">
                    <button type="submit" class="btn btn-outline-primary">검색</button>
                </div>
            </form>
            <div>
                {{#sessionUser}}
                    <a href="/board/new" class="btn btn-primary px-4 shadow-sm">✍️ 글쓰기</a>
                {{/sessionUser}}
                {{^sessionUser}}
                    <button class="btn btn-outline-secondary" onclick="alertLogin()">로그인 후 작성</button>
                {{/sessionUser}}
            </div>
        </div>
    </div>

    <!-- 게시글 리스트 -->
    {{#boardList.content}}
        <div class="card mb-3 shadow-sm border-0">
            <div class="card-body">
                <div class="d-flex justify-content-between align-items-start">
                    <div>
                        <a href="/board/{{boardIdx}}" class="h5 fw-bold text-decoration-none text-dark">{{boardTitle}}</a>
                        <div class="text-muted small mt-1">
                            👤 {{username}} · 📅 {{formattedCreatedAt}} · 👁 {{boardHits}}회
                        </div>
                        <div class="text-muted small mt-1">
                            💬 댓글 {{commentCount}} · ❤️ 좋아요 {{likeCount}}
                        </div>
                    </div>
                    {{#isAuthor}}
                        <div class="d-flex gap-1">
                            <a href="/board/{{boardIdx}}/edit" class="btn btn-sm btn-outline-secondary">✏️</a>
                            <form method="post" action="/board/{{boardIdx}}/delete"
                                  onsubmit="return confirm('정말 삭제하시겠습니까?');">
                                <button type="submit" class="btn btn-sm btn-outline-danger">🗑</button>
                            </form>
                        </div>
                    {{/isAuthor}}
                </div>
            </div>
        </div>
    {{/boardList.content}}

    {{^boardList.content}}
        <div class="text-center text-muted py-5">
            🫥 아직 게시글이 없습니다.
        </div>
    {{/boardList.content}}

    <!-- 페이징 -->
    <nav class="mt-4">
        <ul class="pagination justify-content-center">
            {{#hasPrev}}
                <li class="page-item">
                    <a class="page-link" href="?page={{prevPage}}&keyword={{keyword}}&sort={{sort}}&direction={{direction}}">이전</a>
                </li>
            {{/hasPrev}}
            {{#pageNumbers}}
                <li class="page-item {{#current}}active{{/current}}">
                    <a class="page-link" href="?page={{number}}&keyword={{keyword}}&sort={{sort}}&direction={{direction}}">{{displayNumber}}</a>
                </li>
            {{/pageNumbers}}
            {{#hasNext}}
                <li class="page-item">
                    <a class="page-link" href="?page={{nextPage}}&keyword={{keyword}}&sort={{sort}}&direction={{direction}}">다음</a>
                </li>
            {{/hasNext}}
        </ul>
    </nav>

</div>

<script>
    function alertLogin() {
        alert("로그인이 필요한 서비스입니다.");
        location.href = "/login-form";
    }
</script>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
</body>

