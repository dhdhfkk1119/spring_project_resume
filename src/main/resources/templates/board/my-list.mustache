{{> layout/header}}

<link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" rel="stylesheet">

<body class="bg-light">
<div class="container py-5">

    <!-- 제목 및 이동 -->
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="fw-bold text-dark-emphasis">
            <i class="bi bi-person-circle me-2"></i>내가 쓴 글 목록
        </h2>
        <a href="/board/list" class="btn btn-outline-secondary">
            <i class="bi bi-arrow-left"></i> 전체 목록
        </a>
    </div>

    <!-- 정렬 옵션 -->
    <form method="get" class="row g-3 align-items-end mb-4">
        <div class="col-md-3">
            <label for="sort" class="form-label"><i class="bi bi-funnel"></i> 정렬 기준</label>
            <select name="sort" id="sort" class="form-select">
                <option value="createdAt" {{#isSortCreatedAt}}selected{{/isSortCreatedAt}}>작성일</option>
                <option value="boardHits" {{#isSortBoardHits}}selected{{/isSortBoardHits}}>조회수</option>
            </select>
        </div>
        <div class="col-md-3">
            <label for="direction" class="form-label"><i class="bi bi-sort-down-alt"></i> 정렬 방향</label>
            <select name="direction" id="direction" class="form-select">
                <option value="desc" {{#isDesc}}selected{{/isDesc}}>내림차순</option>
                <option value="asc" {{#isAsc}}selected{{/isAsc}}>오름차순</option>
            </select>
        </div>
        <div class="col-md-auto">
            <button type="submit" class="btn btn-primary px-4">
                <i class="bi bi-check-circle me-1"></i>적용
            </button>
        </div>
    </form>

    <!-- 게시글 카드 목록 -->
    <div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 g-4">
        {{#boardList}}
            <div class="col">
                <div class="card h-100 shadow-sm border-0">
                    <div class="card-body">
                        <h5 class="card-title text-primary">
                            <a href="/board/{{boardIdx}}" class="text-decoration-none text-primary fw-semibold">
                                <i class="bi bi-file-earmark-text me-1"></i>{{boardTitle}}
                            </a>
                        </h5>
                        <p class="card-text text-muted small mb-1">
                            <i class="bi bi-calendar-date me-1"></i>{{formattedCreatedAt}}
                            &nbsp;|&nbsp;
                            <i class="bi bi-eye me-1"></i>{{boardHits}}회 조회
                        </p>
                    </div>
                    <div class="card-footer bg-white border-0 d-flex justify-content-end gap-2">
                        <form method="get" action="/board/{{boardIdx}}/edit" style="display:inline;">
                            <button class="btn btn-sm btn-outline-primary">
                                <i class="bi bi-pencil-square"></i> 수정
                            </button>
                        </form>
                        <form method="post" action="/board/{{boardIdx}}/delete"
                              onsubmit="return confirm('정말 삭제하시겠습니까?');"
                              style="display:inline;">
                            <button class="btn btn-sm btn-outline-danger">
                                <i class="bi bi-trash3"></i> 삭제
                            </button>
                        </form>
                    </div>
                </div>
            </div>
        {{/boardList}}

        {{^boardList}}
            <div class="col-12">
                <div class="alert alert-light text-center border">
                    <i class="bi bi-emoji-frown"></i> 작성한 게시글이 없습니다.
                </div>
            </div>
        {{/boardList}}
    </div>

</div>
</body>

{{> layout/footer}}
