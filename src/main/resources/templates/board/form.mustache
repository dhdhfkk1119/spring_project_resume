<!-- templates/board/form.mustache -->
<!DOCTYPE html>
<html lang="ko">
<head>
    <meta charset="UTF-8">
    <title>{{#isEdit}}게시글 수정{{/isEdit}}{{^isEdit}}게시글 작성{{/isEdit}}</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body class="bg-light">
<div class="container mt-5">
    <div class="card shadow">
        <div class="card-header bg-primary text-white">
            <h3 class="mb-0">{{#isEdit}}게시글 수정{{/isEdit}}{{^isEdit}}새 게시글 작성{{/isEdit}}</h3>
        </div>
        <div class="card-body">
            <form method="post" action="{{#isEdit}}/board/{{boardIdx}}/edit{{/isEdit}}{{^isEdit}}/board{{/isEdit}}">
                <div class="mb-3">
                    <label for="boardTitle" class="form-label">제목</label>
                    <input type="text" class="form-control" id="boardTitle" name="boardTitle"
                           value="{{boardTitle}}" required>
                </div>
                <div class="mb-3">
                    <label for="boardContent" class="form-label">내용</label>
                    <textarea class="form-control" id="boardContent" name="boardContent" rows="10"
                              required>{{boardContent}}</textarea>
                </div>
                <div class="mb-3">
                    <label for="tags" class="form-label">태그</label>
                    <input type="text" class="form-control" id="tags" name="tags" value="{{tags}}">
                </div>
                <button type="submit" class="btn btn-primary">{{#isEdit}}수정{{/isEdit}}{{^isEdit}}작성{{/isEdit}}</button>
                <a href="/board/list" class="btn btn-secondary">취소</a>
            </form>
        </div>
    </div>
</div>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
