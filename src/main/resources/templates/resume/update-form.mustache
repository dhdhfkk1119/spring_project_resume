{{> layout/header}}


<div class="card shadow-sm">
    <div class="card-header d-flex justify-content-between align-items-center">
        <h2 class="h4 mb-0">이력서 수정 (번호: {{resume.resumeIdx}})</h2>
        <!-- 삭제 버튼: 별도의 form으로 감싸서 처리 -->
        <form id="delete-form" action="/resume/{{resume.resumeIdx}}/delete" method="post" class="d-inline">
            <button type="button" id="btn-delete" class="btn btn-danger btn-sm">삭제</button>
        </form>
    </div>
    <div class="card-body">
        <form action="/resume/{{resume.resumeIdx}}/update" method="post">
            <div class="mb-3">
                <label for="resumeContent" class="form-label">이력서 내용</label>
                <textarea class="form-control" id="resumeContent" name="resumeContent" rows="15">{{resume.resumeContent}}</textarea>
            </div>
            <div class="d-flex justify-content-end">
                <a href="/resume/{{resume.resumeIdx}}" class="btn btn-secondary me-2">취소</a>
                <button type="submit" class="btn btn-primary">수정완료</button>
            </div>
        </form>
    </div>
</div>

<script>
    // 삭제 버튼 클릭 시, 사용자에게 확인을 요청하는 스크립트
    document.getElementById('btn-delete').addEventListener('click', function() {
        if (confirm('정말로 이 이력서를 삭제하시겠습니까? 되돌릴 수 없습니다.')) {
            document.getElementById('delete-form').submit();
        }
    });
</script>



{{> layout/footer}}