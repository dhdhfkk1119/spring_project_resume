{{> layout/header}}

<div class="container my-5" style="max-width: 1200px;">
    <div class="d-flex justify-content-between align-items-center mb-1">
        <h2 class="h3 text-muted">{{member.username}}님의 이력서 목록</h2>
        <a href="/resume/save-form" class="btn btn-outline-primary"> <i class="fa-solid fa-plus me-2"></i>새 이력서</a>
    </div>
    <hr>

    {{#repResume}}
        <div class="card border-primary shadow-sm mt-3 mb-3">
            <div class="card-body">
                <div class="row align-items-center">
                    <div class="col">
                        <a href="/resume/{{resumeIdx}}" class="text-decoration-none">
                            <h5 class="card-title mb-1 text-primary fw-bold">{{resumeTitle}}</h5>
                        </a>
                        <p class="card-text"><small class="text-muted">작성일: {{createdAtFormatted}}</small></p>
                        <pre class="card-text text-muted mt-1">{{shortContent}}</pre>
                    </div>
                    <div class="col-auto">
                        <div class="d-flex align-items-center gap-3">
                            <span class="badge text-primary p-0 fs-5" title="대표 이력서입니다.">
                                <i class="fa-solid fa-trophy"></i> 대표 이력서
                            </span>
                            <a href="/resume/{{resumeIdx}}/update-form" class="text-dark" title="수정하기">
                                <i class="fa-solid fa-pen-to-square fs-5"></i>
                            </a>
                            <form action="/resume/{{resumeIdx}}/delete" method="post" class="delete-form d-inline">
                                <button type="submit" class="btn btn-link p-0" title="삭제하기" style="color: Tomato !important;">
                                    <i class="fa-solid fa-trash fs-5"></i>
                                </button>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    {{/repResume}}

    <div class="row row-cols-1 gy-3">
        {{#otherResumes}}
            <hr class="mt-3 mb-0">
            <div class="col">
                <div class="card">
                    <div class="card-body">
                        <div class="row align-items-center">
                            <div class="col">
                                <a href="/resume/{{resumeIdx}}" class="text-decoration-none">
                                    <h5 class="card-title mb-1 text-muted">{{resumeTitle}}</h5>
                                </a>
                                <p class="card-text"><small class="text-muted">작성일: {{createdAtFormatted}}</small></p>
                                <pre class="card-text text-muted mt-1">{{shortContent}}</pre>
                            </div>
                            <div class="col-auto">
                                <div class="d-flex align-items-center gap-3">
                                    <form action="/resume/{{resumeIdx}}/set-rep" method="post" class="set-rep-form d-inline">
                                        <button type="submit" class="btn btn-link text-warning p-0" title="대표 이력서로 설정">
                                            <i class="fa-regular fa-star fs-5"></i>
                                        </button>
                                    </form>
                                    <a href="/resume/{{resumeIdx}}/update-form" class="text-muted" title="수정하기">
                                        <i class="fa-solid fa-pen-to-square fs-5"></i>
                                    </a>
                                    <form action="/resume/{{resumeIdx}}/delete" method="post" class="delete-form d-inline">
                                        <button type="submit" class="btn btn-link p-0" title="삭제하기" style="color: Tomato !important;">
                                            <i class="fa-solid fa-trash fs-5"></i>
                                        </button>
                                    </form>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

        {{/otherResumes}}

        {{^repResume}}
            {{^otherResumes}}
                <div class="col">
                    <div class="text-center py-5">
                        <p class="mb-0">작성된 이력서가 없습니다. 새 이력서를 작성해 보세요.</p>
                    </div>
                </div>
            {{/otherResumes}}
        {{/repResume}}
    </div>
</div>

<script>
    document.addEventListener('DOMContentLoaded', function () {
        const deleteForms = document.querySelectorAll('.delete-form');
        deleteForms.forEach(form => {
            form.addEventListener('submit', function (event) {
                if (!confirm('정말로 이 이력서를 삭제하시겠습니까?')) {
                    event.preventDefault();
                }
            });
        });

        const setRepForms = document.querySelectorAll('.set-rep-form');
        setRepForms.forEach(form => {
            form.addEventListener('submit', function (event) {
                if (!confirm('이 이력서를 대표 이력서로 설정하시겠습니까?')) {
                    event.preventDefault();
                }
            });
        });
    });
</script>

{{> layout/footer}}