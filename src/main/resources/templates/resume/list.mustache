{{> layout/header}}

<div class="container my-5">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h2 class="h3">내 이력서 목록</h2>
        <a href="/resume/save-form" class="btn btn-primary">새 이력서 작성</a>
    </div>
    <hr>
    <div class="row row-cols-1 g-4">

        <!-- 이력서가 하나 이상 있을 경우 반복문 실행 -->
        {{#resumes}}
            <div class="col">
                <a href="/resume/{{resumeIdx}}" class="list-group-item list-group-item-action">
                    <div class="card shadow-sm">
                        <div class="card-body">
                            <h5 class="card-title">이력서 번호: {{resumeIdx}}</h5>
                            <p class="card-text text-truncate">{{resumeContent}}</p>
                            <p class="card-text">
                                <small class="text-muted">작성자: {{member.username}} | 최종수정: {{createdAt}}</small>
                            </p>
                        </div>
                    </div>
                </a>
            </div>
        {{/resumes}}
        <!-- 이력서가 하나도 없을 경우 -->
        {{^resumes}}
            <div class="col">
                <div class="text-center py-5 border rounded">
                    <p class="mb-0">작성된 이력서가 없습니다.</p>
                </div>
            </div>
        {{/resumes}}
    </div>
</div>

{{> layout/footer}}