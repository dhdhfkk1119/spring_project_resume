{{> layout/header}}

<div class="container my-5" style="max-with:1200px;">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h2 class="h3 text-muted">{{member.username}}님의 이력서 목록</h2>
        <a href="/resume/save-form" class="btn btn-outline-primary">새 이력서 작성</a>
    </div>
    <hr>
    <div class="row row-cols-1 g-4">

        <!-- 이력서가 하나 이상 있을 경우 반복문 실행 -->
        {{#resumes}}
            <div class="card mb-3 {{#isRep}}bg-light{{/isRep}}">
                <div class="card-body">
                    <div class="d-flex justify-content-between">
                        <div>
                            <a href="/resume/{{resumeIdx}}" class="text-decoration-none">
                                <h5 class="card-title mb-1 {{#isRep}}text-primary{{/isRep}}{{^isRep}}text-muted{{/isRep}}">{{resumeTitle}}</h5>
                            </a>
                            <p class="card-text"><small class="text-muted">작성일: {{createdAt}}</small></p>
                        </div>
                        <div class="d-flex align-items-center gap-3">

                            {{#isRep}}
                                <span class="badge text-muted p-0 fs-5" title="대표 이력서입니다.">
                                    <i class="fa-solid fa-trophy"></i> 대표 이력서
                                </span>
                            {{/isRep}}
                            {{^isRep}}
                                <form action="/resume/{{resumeIdx}}/set-rep" method="post"
                                      class="set-rep-form d-inline">
                                    <button type="submit" class="btn btn-link text-muted p-0" title="대표 이력서로 설정">
                                        <i class="fa-regular fa-star fs-5"></i>
                                    </button>
                                </form>
                            {{/isRep}}

                            <a href="/resume/{{resumeIdx}}/update-form" class="text-muted" title="수정하기">
                                <i class="fa-solid fa-pen-to-square fs-5"></i>
                            </a>

                            <form action="/resume/{{resumeIdx}}/delete" method="post" class="delete-form d-inline">
                                <button type="submit" class="btn btn-link p-0" title="삭제하기"
                                        style="color: Tomato;">
                                    <i class="fa-solid fa-trash fs-5"></i>
                                </button>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        {{/resumes}}
        <!-- 이력서가 하나도 없을 경우 -->
        {{^resumes}}
            <div class="col">
                <div class="text-center py-5 border rounded">
                    <p class="mb-0">작성된 이력서가 없습니다.</p>
                </div>
            </div>
        {{/resumes}}
    </div>
</div>

<!-- 🚨 추가: 삭제 확인 자바스크립트 -->
<script>
    document.addEventListener('DOMContentLoaded', function() {
           // 기존 삭제 확인 로직
           const deleteForms = document.querySelectorAll('.delete-form');
           deleteForms.forEach(form => {
               form.addEventListener('submit', function(event) {
                   if (!confirm('정말로 이 이력서를 삭제하시겠습니까?')) {
                       event.preventDefault();
                   }
               });
           });

           // ✨ [추가] 대표 이력서 설정 확인 로직
           const setRepForms = document.querySelectorAll('.set-rep-form');
           setRepForms.forEach(form => {
               form.addEventListener('submit', function(event) {
                   if (!confirm('이 이력서를 대표 이력서로 설정하시겠습니까?')) {
                       event.preventDefault(); // '취소'를 누르면 전송을 막습니다.
                   }
               });
           });
       });
</script>

{{> layout/footer}}