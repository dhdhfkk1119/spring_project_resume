{{> layout/header}}

<div class="container my-5">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h2 class="h3">내 이력서 목록</h2>
        <a href="/resume/save-form" class="btn btn-primary">새 이력서 작성</a>
    </div>
    <hr>
    <div class="row row-cols-1 g-4">

        <!-- 이력서가 하나 이상 있을 경우 반복문 실행 -->
        {{#resumes}}
            <div class="card mb-3">
                <div class="card-body">
                    <div class="d-flex justify-content-between">
                        <div>
                            <a href="/resume/{{resumeIdx}}" class="text-decoration-none">
                                <h5 class="card-title mb-1">{{resumeTitle}}</h5>
                            </a>
                            <p class="card-text"><small class="text-muted">작성일: {{createdAt}}</small></p>
                        </div>
                        <div class="d-flex align-items-center">
                            {{#isRep}}
                                <span class="badge bg-primary me-3">대표</span>
                            {{/isRep}}

                            <a href="/resume/{{resumeIdx}}/update-form" class="btn btn-sm btn-outline-secondary">수정</a>
                        </div>
                    </div>
                </div>
            </div>
        {{/resumes}}
        <!-- 이력서가 하나도 없을 경우 -->
        {{^resumes}}
            <div class="col">
                <div class="text-center py-5 border rounded">
                    <p class="mb-0">작성된 이력서가 없습니다.</p>
                </div>
            </div>
        {{/resumes}}
    </div>
</div>

{{> layout/footer}}