<!-- Í≥µÍ≥† ÎçîÎ≥¥Í∏∞ ÎàÑÎ•ºÏãúÏóê Ïã§ÏãúÍ∞ÑÏúºÎ°ú Îç∞Ïù¥ÌÑ∞ Î≥¥Ïó¨Ï£ºÍ∏∞ ajax fetch ÏÇ¨Ïö©-->
<script>

    const loadMoreBtn = document.getElementById('loadMoreBtn');
    const recruitList = document.getElementById('recruit-list');

    loadMoreBtn.addEventListener('click', () => {
        const page = parseInt(loadMoreBtn.getAttribute('data-page'));
        const size = 5;

            fetch(`/like/api/my-recruit?page=${page}&size=${size}`)
              .then(res => res.json())
              .then(data => {
                data.content.forEach(item => {
                  const recruit = item.recruit;
                  const corp = recruit.corp;

                  const div = document.createElement("div");
                  div.className = "card mb-3 position-relative";

                  div.innerHTML = `
                    <div class="card-body d-flex flex-wrap">
                      <div class="w-75 overflow-hidden">
                        <div class="d-flex align-items-center flex-wrap gap-2">
                          <a href="/recruit/${recruit.recruitIdx}" class="recruit-link fw-bold text-truncate d-inline-block">
                            ${recruit.recruitTitle}
                          </a>
                          <span class="custom-gray">ÎßàÍ∞êÏùº: ${recruit.endAtFormatted} (Ïõî)</span>
                        </div>
                        <div class="mb-2 custom-gray">
                          <span>${recruit.area} *</span>
                          <span>${recruit.career} *</span>
                          <span>${recruit.education} *</span>
                          <span>${recruit.workType}</span>
                        </div>
                        <div>
                          <span class="custom-bold ellipsis-multiline">${recruit.recruitContent}</span>
                        </div>
                      </div>
                      <div class="d-flex w-25 align-items-center position-relative">
                        <span class="fw-bold">${corp.corpName}</span>
                      </div>
                    </div>
                    <div class="support-date custom-gray text-end"
                         style="position: absolute; bottom: 10px; right: 15px;">
                         Ï∞úÌïú ÎÇ†Ïßú: ${item.createdAtFormatted}
                    </div>
                  `;

                  recruitList.appendChild(div);
                });

                // ÌéòÏù¥ÏßÄ Ï¶ùÍ∞Ä
                loadMoreBtn.setAttribute("data-page", page + 1);

                if (data.last) {
                  loadMoreBtn.style.display = "none";
                }

                loadMoreBtn.scrollIntoView({ behavior: "smooth", block: "end" });
              });

    });
</script>